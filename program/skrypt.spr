// najpierw chwilę postój
Pause 1000

// ustaw robota w pozycji startowej
Set Robot 0 0 0  0 0 0
Pause 500

// dwie rzeczy na raz: jedzie i się obraca
Begin_Parallel_Actions
  Move   Robot 1 4
  Rotate Robot OZ 45 180
End_Parallel_Actions

Pause 1000

// znowu dwie rzeczy na raz
Begin_Parallel_Actions
  Rotate Robot OX 20  45
  Rotate Robot OY 15 -45
End_Parallel_Actions

Pause 1000
